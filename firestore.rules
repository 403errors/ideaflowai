rules_version = '2';

service cloud.firestore {
  match /databases/{database}/documents {
    match /projects/{projectId} {
      // Allow create only if the user is authenticated and is the owner of the new document.
      allow create: if request.auth != null && request.resource.data.userId == request.auth.uid;

      // Allow read, update, and delete only if the user is authenticated and is the owner of the existing document.
      // This rule is more robust because it checks for the existence of the 'userId' field before comparing it.
      // This prevents queries from failing if some documents in the collection are malformed (e.g., missing the userId field).
      allow read, update, delete: if request.auth != null
                                  && 'userId' in resource.data
                                  && resource.data.userId == request.auth.uid;
    }
  }
}
